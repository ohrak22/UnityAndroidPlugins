<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ttp_bg_color"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <include layout="@layout/ttp_view_title" />
    <LinearLayout
        android:baselineAligned="false"
    	android:orientation="vertical"
    	android:padding="10dip"
    	android:layout_weight="1"
    	android:layout_width="fill_parent"
    	android:layout_height="0dip">
    	<LinearLayout
    		style="@style/ttp_container_vertical"
    		android:layout_weight="1"
    		android:layout_height="0dip"
    		android:gravity="center_vertical|center_horizontal">
	    	<LinearLayout style="@style/ttp_box">
			    <LinearLayout style="@style/ttp_box_row" android:gravity="center_vertical">
					<CheckBox
						style="@style/ttp_control_checkbox_medium"
						android:id="@+id/ttp_cb_term1"
						android:checked="true" />
					<TextView
						android:textSize="15sp"
						android:textColor="#000000"
						android:text="@string/ttp_title_term1"
						android:layout_marginLeft="5dip"
						android:layout_marginRight="5dip"
						android:layout_weight="1"
					    android:layout_width="0dip"
					    android:layout_height="wrap_content" />
					<Button
						style="@style/ttp_control_button_basic_small"
						android:id="@+id/ttp_btn_detail1"
						android:layout_height="wrap_content"
						android:text="@string/ttp_btn_term_detail" />
				</LinearLayout>
				<TextView
					android:textSize="12sp"
					android:textColor="#000000"
					android:text="@string/ttp_msg_term1_short"
					android:layout_marginLeft="5dip"
					android:layout_marginRight="5dip"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content" />
				<LinearLayout style="@style/ttp_line_basic" />
			    <LinearLayout style="@style/ttp_box_row" android:gravity="center_vertical">
					<CheckBox
						style="@style/ttp_control_checkbox_medium"
						android:id="@+id/ttp_cb_term2"
						android:checked="true" />
					<TextView
						android:textSize="15sp"
						android:textColor="#000000"
						android:text="@string/ttp_title_term2"
						android:layout_marginLeft="5dip"
						android:layout_marginRight="5dip"
						android:layout_weight="1"
					    android:layout_width="0dip"
					    android:layout_height="wrap_content" />
					<Button
						style="@style/ttp_control_button_basic_small"
						android:id="@+id/ttp_btn_detail2"
						android:layout_height="wrap_content"
						android:text="@string/ttp_btn_term_detail" />
				</LinearLayout>
				<TextView
					android:textSize="12sp"
					android:textColor="#000000"
					android:text="@string/ttp_msg_term2_short"
					android:layout_marginLeft="5dip"
					android:layout_marginRight="5dip"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content" />
				<LinearLayout style="@style/ttp_line_basic" />
			    <LinearLayout style="@style/ttp_box_row" android:gravity="center_vertical">
					<CheckBox
						style="@style/ttp_control_checkbox_medium"
						android:id="@+id/ttp_cb_term3"
						android:checked="true" />
					<TextView
						android:textSize="15sp"
						android:textColor="#000000"
						android:text="@string/ttp_title_term3"
						android:layout_marginLeft="5dip"
						android:layout_marginRight="5dip"
						android:layout_weight="1"
					    android:layout_width="0dip"
					    android:layout_height="wrap_content" />
					<Button
						style="@style/ttp_control_button_basic_small"
						android:id="@+id/ttp_btn_detail3"
						android:layout_height="wrap_content"
						android:text="@string/ttp_btn_term_detail" />
				</LinearLayout>
				<TextView
					android:textSize="12sp"
					android:textColor="#000000"
					android:text="@string/ttp_msg_term3_short"
					android:layout_marginLeft="5dip"
					android:layout_marginRight="5dip"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content" />
				<LinearLayout style="@style/ttp_line_basic" />
			    <LinearLayout style="@style/ttp_box_row" android:gravity="center_vertical">
					<CheckBox
						style="@style/ttp_control_checkbox_medium"
						android:id="@+id/ttp_cb_term4"
						android:checked="true" />
					<TextView
						android:textSize="15sp"
						android:textColor="#000000"
						android:text="@string/ttp_title_term4"
						android:layout_marginLeft="5dip"
						android:layout_marginRight="5dip"
						android:layout_weight="1"
					    android:layout_width="0dip"
					    android:layout_height="wrap_content" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			style="@style/ttp_container_horizontal"
			android:padding="10dip">
			<Button
				style="@style/ttp_control_button_basic"
				android:id="@+id/ttp_btn_agree"
				android:text="@string/ttp_btn_agree"
				android:layout_weight="1"
				android:layout_width="fill_parent" />
			<Button
				style="@style/ttp_control_button_basic"
				android:id="@+id/ttp_btn_agree_not"
				android:text="@string/ttp_btn_agree_not"
				android:layout_marginLeft="5dip"
				android:layout_weight="1"
				android:layout_width="fill_parent" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
