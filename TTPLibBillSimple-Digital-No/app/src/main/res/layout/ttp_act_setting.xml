<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/ttp_bg_color"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/ttp_view_title" />

    <FrameLayout
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_width="fill_parent" >

        <LinearLayout
            android:id="@+id/ttp_ll_contents"
            android:visibility="invisible"
            style="@style/ttp_container_vertical" >

            <ScrollView
                android:id="@+id/ttp_sv_contents"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent" >

                <LinearLayout
                    android:padding="10dip"
                    style="@style/ttp_container_vertical" >

                    <LinearLayout
                        android:padding="20dp"
                        style="@style/ttp_box" >

                        <LinearLayout style="@style/ttp_container_horizontal" >

                            <TextView
                                android:gravity="center_vertical"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="10dip"
                                android:layout_width="wrap_content"
                                android:text="@string/ttp_field_kids"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <CheckBox
                                android:checked="false"
                                android:id="@+id/ttp_cb_kids"
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                style="@style/ttp_control_checkbox_onoff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="10dip"
                            style="@style/ttp_vspace" />

                        <TextView
                            android:gravity="left"
                            android:id="@+id/ttp_tv_msg"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:text="@string/ttp_msg_kids_info"
                            android:textColor="#000000"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="10dip"
                        style="@style/ttp_vspace" />

                    <LinearLayout
                        android:padding="20dp"
                        style="@style/ttp_box" >

                        <LinearLayout style="@style/ttp_container_horizontal" >

                            <TextView
                                android:text="@string/ttp_field_name"
                                style="@style/ttp_box_field" />

                            <EditText
                                android:hint="@string/ttp_field_name_hint"
                                android:id="@+id/ttp_et_name"
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:maxLength="10"
                                android:singleLine="true"
                                style="@style/ttp_control_edittext_basic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            style="@style/ttp_container_horizontal" >

                            <TextView
                                android:text="@string/ttp_field_jumin"
                                style="@style/ttp_box_field" />

                            <EditText
                                android:hint="@string/ttp_field_jumin_hint"
                                android:id="@+id/ttp_et_jumin"
                                android:inputType="number"
                                android:layout_weight="1"
                                android:layout_width="0dip"
                                android:maxLength="13"
                                style="@style/ttp_control_edittext_basic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            style="@style/ttp_container_horizontal" >

                            <TextView
                                android:text="@string/ttp_field_phone"
                                style="@style/ttp_box_field" />

                            <LinearLayout
                                style="@style/ttp_box_row" >
                                <TextView
                                    android:id="@+id/ttp_tv_phone"
                                    style="@style/ttp_box_value" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dip"
                            style="@style/ttp_container_horizontal" >

                            <TextView
                                android:gravity="left|center_vertical"
                                android:text="@string/ttp_field_autologin"
                                style="@style/ttp_box_field" />

                            <CheckBox
                                android:checked="false"
                                android:id="@+id/ttp_cb_autologin"
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                style="@style/ttp_control_checkbox_onoff" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="10dip"
                        style="@style/ttp_vspace" />

                    <LinearLayout
						android:id="@+id/ttp_ll_user_info"
						android:orientation="vertical"
                        android:padding="20dp"
                        style="@style/ttp_box" />

                    <LinearLayout
                        android:layout_height="10dip"
                        style="@style/ttp_vspace" />

                    <Button
                        android:id="@+id/ttp_btn_save"
                        android:layout_width="fill_parent"
                        android:text="@string/ttp_btn_save"
                        style="@style/ttp_control_button_basic" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <include layout="@layout/ttp_view_empty" />

        <include layout="@layout/ttp_view_loading" />

    </FrameLayout>

</LinearLayout>