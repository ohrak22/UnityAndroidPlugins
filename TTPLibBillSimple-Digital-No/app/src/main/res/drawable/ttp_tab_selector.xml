<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Non focused states -->
<item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/ttp_tab_nor" />
<item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/ttp_tab_sel" />

<!-- Focused states -->
<item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/ttp_tab_sel" />
<item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/ttp_tab_sel" />

<!-- Pressed -->
<item android:state_selected="true" android:state_pressed="true" android:drawable="@drawable/ttp_tab_sel" />
<item android:state_pressed="true" android:drawable="@drawable/ttp_tab_sel" />

</selector>